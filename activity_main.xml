<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context="com.harshitkp.zesto_listview.MainActivity">

    <ScrollView
        android:id="@+id/main_scroll_view"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main_child_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/logo_layout"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_margin="72dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:contentDescription="@string/logo"
                    android:id="@+id/logo_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/kp"/>
                <TextView
                    android:id="@+id/logo_text"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/logo"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:id="@+id/buttons_main_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/menu_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:layout_height="110dp"
                    android:layout_marginRight="16dp"
                    android:textColor="@android:color/white"
                    android:text="@string/menu"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/order_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_button"
                    android:layout_height="110dp"
                    android:text="@string/orderNow"/>
                <Button
                    android:id="@+id/stores_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_button"
                    android:layout_height="110dp"
                    android:text="@string/stores"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
